@model IEnumerable<Zhenic.Models.Person>

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>کاربران</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">لیست افراد</h2>

        <a href="/People/Create" class="btn btn-success">اضافه کردن فرد جدید</a>

        <table class="table table-bordered table-hover table-striped mt-3" id="peopleTable">
            <thead class="table-dark">
                <tr>
                    <th scope="col">نام</th>
                    <th scope="col">نام خانوادگی</th>
                    <th scope="col">سن</th>
                    <th scope="col">کد ملی</th>
                    <th scope="col">عمل</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var person in Model) {
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.Age</td>
                        <td>@person.Code</td>

                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@person.Id">جزئیات</a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@person.Id">ویرایش</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@person.Id">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#peopleTable").DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
            });
        });
    </script>
</body>
</html>