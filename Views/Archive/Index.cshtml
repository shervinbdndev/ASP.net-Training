@model IEnumerable<Zhenic.Models.Archive>

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>آرشیو</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #1e1e1e;
            color: #ffffff;
        }
        .archive-item {
            background-color: #495057;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">آرشیو</h2>
        <a href="/Archive/Create" class="btn btn-success mb-2">اضافه کردن آرشیو جدید</a>
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                هیچ آرشیوی وجود ندارد.
            </div>
        }
        else
        {
            foreach (var archive in Model)
            {
                <div class="archive-item">
                    <h5><i class="fas fa-file-alt"></i> @archive.Title</h5>
                    <p><strong>تاریخ:</strong> @archive.Date.ToShortDateString()</p>
                    <img src="@Url.Content("~/uploads/" + archive.ImagePath)" alt="@archive.Title" class="img-fluid" style="max-width: 200px; border-radius: 5px;" />
                </div>
            }
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
